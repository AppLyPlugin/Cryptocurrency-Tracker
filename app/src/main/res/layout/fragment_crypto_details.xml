<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cryptodetails.CryptoDetailsFragment" >

    <TextView
        android:id="@+id/cryptoRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="Rank #1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cryptoLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cryptoRank"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cryptoRank"
        app:layout_constraintTop_toBottomOf="@+id/cryptoRank"
        tools:src="@drawable/ic_crpto_frag_error" />

    <TextView
        android:id="@+id/cryptoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Crypto Name"
        app:layout_constraintStart_toEndOf="@+id/cryptoLogo"
        app:layout_constraintTop_toBottomOf="@+id/cryptoRank" />

    <TextView
        android:id="@+id/cryptoSymbol"
        android:layout_width="58dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:text="Crypto Symbol"
        app:layout_constraintEnd_toEndOf="@+id/cryptoName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cryptoName"
        app:layout_constraintTop_toBottomOf="@+id/cryptoName" />

    <TextView
        android:id="@+id/cryptoStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="@+id/cryptoLogo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cryptoLogo"
        app:layout_constraintTop_toBottomOf="@+id/cryptoLogo" />

    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Time Stamp"
        app:layout_constraintEnd_toEndOf="@+id/cryptoStatus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cryptoStatus"
        app:layout_constraintTop_toBottomOf="@+id/cryptoStatus" />
</androidx.constraintlayout.widget.ConstraintLayout>